<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodOrderApp"
        tools:targetApi="31">
        <activity
            android:name=".splash_screen_app_logo"
            android:exported="true"
            android:theme="@style/Theme.FoodOrderApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".get_start_main_screen"
            android:exported="false"
            android:theme="@style/Theme.FoodOrderApp" />
        <activity
            android:name=".Register_User"
            android:exported="false"
            android:theme="@style/Theme.FoodOrderApp" />
        <activity
            android:name=".LogIn_User"
            android:exported="false"
            android:theme="@style/Theme.FoodOrderApp" />
        <activity
            android:name=".splash_screen_main"
            android:exported="true"
            android:theme="@style/Theme.FoodOrderApp">
        </activity>
        <activity
            android:name=".choose_location"
            android:exported="true"
            android:theme="@style/Theme.FoodOrderApp" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.FoodOrderApp"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>