<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".choose_location">

    <TextView
        android:id="@+id/textView_Choose_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/yeon_sung"
        android:text="@string/choose_your_location"
        android:textColor="@color/Base_Theme"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />


    <Spinner
        android:id="@+id/List_Loc"
        android:layout_width="360dp"
        android:layout_height="57dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/edittext_bg"
        android:outlineAmbientShadowColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_Choose_loc"
        app:layout_constraintTop_toBottomOf="@+id/textView_Choose_loc" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:fontFamily="@font/yeon_sung"
        android:paddingStart="10dp"
        android:text="@string/choose_loc_desc"
        android:textColor="@color/Base_Theme"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="153dp"
        android:layout_height="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_p_n_g" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="157dp"
        android:layout_height="57dp"
        android:layout_marginTop="92dp"
        android:text="@string/submit"
        android:background="@drawable/red_button_gradient"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:elevation="365dp"
        app:layout_constraintEnd_toEndOf="@+id/List_Loc"
        app:layout_constraintStart_toStartOf="@+id/List_Loc"
        app:layout_constraintTop_toBottomOf="@+id/List_Loc" />

</androidx.constraintlayout.widget.ConstraintLayout>